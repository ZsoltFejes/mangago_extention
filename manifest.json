{
    "manifest_version": 3,

    "name": "Mangago Reader",
    "description": "Mangago reader extention",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
     "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["https://mangago.me/read-manga/*"],
            "js": ["update_style.js"],
            "run_at": "document_idle"
        }
    ]
  }